<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jetpack.JetPackMainActivity">

    <Button
        android:id="@+id/open_view_model_counter"
        android:text="打开ViewModel计数器页面"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/open_room"
        android:text="打开Room增删改查页面"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/open_doWork"
        android:text="开启单一定时任务"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>