<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".material.MaterialUIMainActivity">

    <Button
        android:id="@+id/open_toolbar"
        android:text="打开ToolBar页面"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/open_drawerLayout"
        android:text="打开滑动菜单drawerLayout页面"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/open_cardView"
        android:text="打开卡片式布局页面"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>